<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RepeatOnceActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_box_height"
        tools:visibility="visible"/>

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
        <!--<ImageView
            android:id="@+id/hist_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_person_black_24dp"
            android:layout_margin="@dimen/space5"
            android:padding="2dp" />-->

        <TextView
            android:layout_marginLeft="@dimen/space20"
            android:id="@+id/hist_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="From : "
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginLeft="@dimen/space20"
            android:id="@+id/hist_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hist_from"
            android:text="To : "
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginLeft="@dimen/space20"
            android:layout_below="@+id/hist_to"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_below="@+id/hist_to"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/space10"
                android:padding="@dimen/space5"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hist_distance"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="10 KM "
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/hist_status"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_form"
                android:layout_below="@id/rl_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space10"
                android:orientation="vertical"
                android:paddingTop="@dimen/space10"
                android:background="@drawable/bg_white_top_border"
                android:weightSum="7">
                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/remove_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/bg_white_left_border"
                    app:srcCompat="@drawable/ic_minus_black" />
                <TextView
                    android:id="@+id/required_seats"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_seat"
                    android:text="1"
                    style="@style/TextView14spGrayPad"
                    android:gravity="center" />
                <ImageView
                    android:id="@+id/add_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/bg_white_right_border"
                    app:srcCompat="@drawable/ic_add" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/space10"
                android:orientation="vertical"
                android:padding="@dimen/space5"
                android:layout_width="250dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/new_time"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="36dp"
                    android:hint="@string/date_time"
                    style="@style/TextView14spGrayPad"
                    android:background="@drawable/bg_white_right_border"
                    android:gravity="center_horizontal"/>



                <Button
                    android:id="@+id/save_repeat_once"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space20"
                    android:text="Submit"
                    android:textColor="@color/white_primary"
                    android:background="@drawable/button_corner"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/hist_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/hist_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note : New price will be calculated"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>