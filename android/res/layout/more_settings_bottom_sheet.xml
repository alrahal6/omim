    <LinearLayout
        android:id="@+id/priceRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/segmented2"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:text="@string/expected_price"
            android:textColor="@color/base_red"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/qut2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <!--<ImageView
                android:id="@+id/add2"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:padding="2dp"
                android:src="@drawable/ic_add" />-->
            <EditText
                android:id="@+id/price_min"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/box"
                android:hint=" Min"
                android:imeOptions="actionUnspecified"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                 />
            <!--<EditText
                android:id="@+id/totPassenger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:inputType="number"
                android:hint="Min"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />-->

            <TextView
                android:id="@+id/remove2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="4dp"
                android:textColor="@color/base_red"
                android:text="To" />

            <EditText
                android:id="@+id/price_max"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/box"
                android:hint=" Min"
                android:imeOptions="actionUnspecified"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                 />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceRange"
        android:background="#fff"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:text="Flexibility Time: "
            android:textColor="@color/base_red"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/qut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_add" />

            <TextView
                android:id="@+id/product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:background="#00000000"
                android:hint="10 mins"
                android:text="15 mins"
                android:textColor="@color/base_red"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/remove"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginLeft="22dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_minus_black" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>







