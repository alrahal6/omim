<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
        <ImageView
            android:id="@+id/near_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_person_black_24dp"
            android:layout_margin="@dimen/space5"
            android:padding="2dp" />

        <TextView
            android:id="@+id/near_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/near_image"
            android:text="From : "
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/near_image" />
        <TextView
            android:id="@+id/near_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/near_from"
            android:layout_toEndOf="@+id/near_image"
            android:text="To : "
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/near_image" />

        <LinearLayout
            android:layout_below="@+id/near_to"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_below="@+id/near_to"
                android:orientation="horizontal"
                android:padding="@dimen/space5"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/near_distance"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="10 KM "
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/near_seats"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_seat"
                    android:textSize="15sp" />
                <Button
                    android:id="@+id/near_google_map"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_width="wrap_content"
                    android:textColor="@color/base_green"
                    android:background="@layout/rounded_border_edittext"
                    android:text="@string/google_map"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/space5"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/near_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="time : "
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/near_gender"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Gender  "
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/near_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="200 SDG "
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>