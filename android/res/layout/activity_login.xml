<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <View
        android:id="@+id/anchor_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner_bg"
        android:elevation="5dp"
        android:orientation="vertical"
        android:layout_above="@id/anchor_center"
        android:padding="10dp">

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/factor_icon" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/enter_user_info"
            android:textAlignment="center"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_corner"
            android:hint="@string/name"
            android:padding="10dp" />

        <!--<EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner"
            android:hint="Email"
            android:padding="5dp" />-->

         <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/etExt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_249"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_call_black_24dp"
                    android:drawableLeft="@drawable/ic_call_black_24dp" />
                    <EditText
                        android:id="@+id/mobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_corner"
                        android:hint="@string/mobile_number"
                        android:inputType="number"
                        android:maxLength="9"
                        android:padding="10dp" />
                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>

        <!--<EditText
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corner"
            android:hint="Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:padding="10dp" />-->

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_corner_button"
            android:text="@string/user_login" />
        <ProgressBar
            android:id="@+id/loginProgressOtp"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/otp_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner_bg"
        android:elevation="5dp"
        android:orientation="vertical"
        android:layout_below="@id/anchor_center"
        android:visibility="gone"
        android:padding="10dp">

    <EditText
        android:id="@+id/etOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner"
        android:layout_below="@+id/anchor_center"
        android:hint="@string/please_enter_otp"
        android:inputType="number"
        android:maxLength="6"
        android:padding="10dp" />
        <Button
            android:id="@+id/btnOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_corner_button"
            android:text="@string/submit_otp" />
    </LinearLayout>

</RelativeLayout>
