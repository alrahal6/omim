<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
        <!--<ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_person_black_24dp"
            android:layout_margin="@dimen/space5"
            android:padding="2dp" />-->
        <EditText
            android:id="@+id/c_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="Add Note : "
            android:textSize="20sp" />
        <TextView
            android:id="@+id/c_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c_note"
            android:layout_marginTop="@dimen/space5"
            android:text="Address : "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/c_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space5"
            android:layout_below="@+id/c_from"
            android:text="Address : "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/c_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c_to"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/space5"
            android:drawableStart="@drawable/ic_time"
            android:layout_margin="@dimen/space5"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_below="@+id/c_time"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space5"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/c_distance"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Distance : "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/c_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount : "
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/c_car_pool"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space5"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/c_seats"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_seat"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/c_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_person"
                    android:layout_weight="1"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>