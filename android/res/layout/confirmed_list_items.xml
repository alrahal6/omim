<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_person_black_24dp"
            android:layout_margin="@dimen/space5"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:text="@string/name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imageView" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="@string/al_address"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imageView" />
        <Button
            android:id="@+id/request_match"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:layout_below="@+id/textView2"
            android:layout_width="wrap_content"
            android:textColor="@color/base_green"
            android:background="@layout/rounded_border_edittext"
            android:text="@string/add"/>

        <LinearLayout
            android:layout_below="@+id/request_match"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/start_time"
            android:textSize="15sp" />

            <TextView
                android:id="@+id/your_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_time"
                android:text="@string/your_distance"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/extra_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/your_distance"
                android:text="@string/extra_distance"
                android:textSize="15sp"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/trip_route_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/extra_distance"
                android:text="@string/trip_plan"
                android:textSize="15sp"/>

        <LinearLayout
            android:layout_below="@+id/trip_route_plan"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trip_distance"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_time"
                android:text="@string/distance"
                android:textSize="15sp" />
            <!--<Button
                android:id="@+id/remove_match"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/space20"
                android:textColor="@color/base_red"
                android:background="@layout/rounded_border_edittext"
                android:text="Remove"/>-->
            <TextView
                android:id="@+id/trip_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/amount"
                android:textSize="15sp"/>
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>