<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/customerInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/int_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/capt_progress_bar"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079"
        tools:progress="60" />

    <TextView
        android:id="@+id/text_view_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/capt_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/capt_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/capt_progress_bar"
        app:layout_constraintTop_toTopOf="@+id/capt_progress_bar"
        tools:text="12" />
    <!--<LinearLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <com.mapsrahal.util.SwipeButton
            android:id="@+id/swipeButton"
            android:padding="@dimen/space10"
            android:layout_marginLeft="@dimen/space10"
            android:layout_marginRight="@dimen/space10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@android:color/holo_green_dark"
            android:text="@string/reached_customer"
            android:textColor="@android:color/black" />
    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/ll_capt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capt_progress_bar"
        tools:layout_editor_absoluteX="0dp">
        <!--<ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:id="@+id/customerProfileImage"
            android:src="@mipmap/ic_default_user"
            android:padding="20sp"/>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/customerPickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:text="Pickup : Kafouri"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/customerDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Drop : Arkaweet"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Amount : 300 SDG "
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tripDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Distance : 10 KM"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/customerPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:text="Pickup Distance : 1 km"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/acceptBusyInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_capt">

        <Button
            android:id="@+id/captainBusy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@layout/rounded_border_edittext"
            android:text="@string/busy"
            android:textColor="@color/base_red"
            android:textSize="20sp" />

        <Button
            android:id="@+id/captainAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@layout/rounded_border_edittext"
            android:text="@string/accept_request"
            android:textColor="@color/base_green"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>